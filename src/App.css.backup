/* =====================================================================================
   MAPLESTORY BOSS CRYSTAL CALCULATOR - MASTER STYLESHEET
   =====================================================================================
   
   Modular CSS architecture with organized imports.
   Each file contains related styles for better maintainability.
   
   File Structure:
   - base.css: Reset, global styles, app containers
   - animations.css: Keyframes, transitions, loading states
   - navbar.css: Navigation header and buttons
   - layout.css: Page layouts, containers, typography
   - tables.css: Boss tables and data tables
   - modals.css: Modal dialogs and overlays
   - buttons.css: Interactive buttons and controls
   - forms.css: Form elements and inputs
   - characters.css: Character management UI
   - weekly-tracker.css: Weekly tracker specific styles
   - sidebar.css: Character sidebar and toggle
   - responsive.css: Mobile breakpoints and scrollbars
   - theme.css: Dark theme overrides
   
   ===================================================================================== */

/* Import all modular CSS files */
@import './styles/base.css';
@import './styles/animations.css';
@import './styles/navbar.css';
@import './styles/layout.css';
@import './styles/tables.css';
@import './styles/modals.css';
@import './styles/buttons.css';
@import './styles/forms.css';
@import './styles/characters.css';
@import './styles/weekly-tracker.css';
@import './styles/sidebar.css';
@import './styles/responsive.css';
@import './styles/theme.css';


